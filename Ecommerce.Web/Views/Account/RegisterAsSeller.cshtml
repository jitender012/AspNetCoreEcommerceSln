@model eCommerce.Web.Models.RegisterViewModel
<div class="container d-flex justify-content-center">
    <div class="card" style="width:31%">
        <div class="card-header">
            <center>
                Register As Seller
            </center>
        </div>
        <div class="card-body ">
            <div asp-validation-summary="All" class="text-danger">
            </div>
            <form asp-action="Register" asp-controller="Account" method="post">
                <label asp-for="Name" class="form-label">Name</label>
                <input asp-for="Name" class="form-control" type="text" name="Name" />

                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control" type="text" name="Email" />

                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" class="form-control" type="text" name="Password" />

                <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                <input asp-for="ConfirmPassword" class="form-control" type="text" name="ConfirmPassword" />
                <br />
                <input class="btn btn-success w-100" type="submit" value="Register" />
            </form>
        </div>
        <div class="card-footer">
            <p>Already registered?  <a href="#" class="link-dark text-decoration-none">Login</a></p>
        </div>
    </div>

</div>