@{
    ViewData["Title"] = "Brand Management";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@model List<BrandListVM>

<div class="container-fluid py-4">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center flex-wrap">
                <div class="mb-2">
                    <h1 class="h3 mb-1">Brand Management</h1>
                    <p class="text-muted mb-0">Manage product brands and their settings</p>
                </div>
                <div class="d-flex gap-2 mb-2">
                    <button type="button" class="btn btn-outline-secondary" onclick="exportBrands()">
                        <i class="fas fa-download me-2"></i>Export
                    </button>
                   
                    <a class="btn btn-primary" href="/admin/brand/create"><i class="fas fa-plus me-2"></i>Add Brand</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card   h-100" style="background-color: #4A90E2;">
                <div class="card-body" >
                    <div class="d-flex justify-content-between" >
                        <div style="color:white">
                            <h6 class="mb-2" style="color:white">Total Brands</h6>
                            <h3 class="mb-0" style="color:white">@Model.Count</h3>
                        </div>
                        <div class="align-self-center">
                            <i style="color:white"  class="fas fa-tags fa-2x opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card  h-100" style="background-color: #27AE60; color:white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 style="color:white" class="card-title mb-2">Active Brands</h6>
                            <h3 class="mb-0">@Model.Count(b => b.IsActive == true)</h3>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-check-circle fa-2x opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card   h-100" style="background-color: #F39C12;">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 style="color:white"  class="card-title mb-2">Inactive Brands</h6>
                            <h3 class="mb-0">@Model.Count(b => b.IsActive == false)</h3>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-pause-circle fa-2x opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card  h-100" style="background-color: #8E44AD;">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 style="color:white" class="card-title mb-2">Total Products</h6>
                            <h3 class="mb-0">@Model.Sum(b => b.ProductCount)</h3>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-box fa-2x opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Filters -->
    <div class="card mb-4">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-4">
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-search"></i></span>
                        <input type="text" class="form-control" id="searchInput" placeholder="Search brands...">
                    </div>
                </div>
                <div class="col-md-3">
                    <select class="form-select" id="statusFilter">
                        <option value="">All Status</option>
                        <option value="active">Active</option>
                        <option value="inactive">Inactive</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <select class="form-select" id="sortBy">
                        <option value="name-asc">Name A-Z</option>
                        <option value="name-desc">Name Z-A</option>
                        <option value="products-desc">Most Products</option>
                        <option value="products-asc">Least Products</option>
                        <option value="date-desc">Newest First</option>
                        <option value="date-asc">Oldest First</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <div class="btn-group w-100">
                        <button type="button" class="btn btn-outline-secondary" id="gridViewBtn" title="Grid View">
                            <i class="fas fa-th"></i>
                        </button>
                        <button type="button" class="btn btn-primary" id="listViewBtn" title="List View">
                            <i class="fas fa-list"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bulk Actions -->
    <div class="card mb-4" id="bulkActionsCard" style="display: none;">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <span class="fw-semibold">Bulk Actions:</span>
                    <span id="selectedCount" class="text-muted ms-2">0 brands selected</span>
                </div>
                <div class="btn-group">
                    <button type="button" class="btn btn-success btn-sm" onclick="bulkAction('activate')">
                        <i class="fas fa-check me-1"></i>Activate
                    </button>
                    <button type="button" class="btn btn-warning btn-sm" onclick="bulkAction('deactivate')">
                        <i class="fas fa-pause me-1"></i>Deactivate
                    </button>
                    <button type="button" class="btn btn-danger btn-sm" onclick="bulkAction('delete')">
                        <i class="fas fa-trash me-1"></i>Delete
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Brands List -->
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="card-title mb-0">Brands</h5>
            <small class="text-muted">
                Showing <span id="showingCount">@Model.Count</span> of <span id="totalCount">@Model.Count</span> brands
            </small>
        </div>
        <div class="card-body p-0">
            <!-- List View (Default) -->
            <div id="listView">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th width="40">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="selectAll">
                                    </div>
                                </th>
                                <th width="80">Logo</th>
                                <th>Brand Name</th>
                                <th width="120">Products</th>
                                <th width="120">Status</th>
                                <th width="150">Created Date</th>
                                <th width="180">Actions</th>
                            </tr>
                        </thead>
                        <tbody id="brandsTableBody">
                            @foreach (var brand in Model)
                            {
                                <tr data-brand-id="@brand.BrandId"
                                    data-status="@(brand.IsActive == true ? "active" : "inactive")"
                                    data-name="@brand.BrandName.ToLower()">
                                    <td>
                                        <div class="form-check">
                                            <input class="form-check-input brand-checkbox" type="checkbox"
                                                   value="@brand.BrandId">
                                        </div>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(brand.BrandImage))
                                        {
                                            <img src="@brand.BrandImage" alt="@brand.BrandName"
                                                 class="rounded" style="width: 50px; height: 50px; object-fit: contain;">
                                        }
                                        else
                                        {
                                            <div class="bg-light rounded d-flex align-items-center justify-content-center"
                                                 style="width: 50px; height: 50px;">
                                                <i class="fas fa-image text-muted"></i>
                                            </div>
                                        }
                                    </td>
                                    <td>
                                        <h6 class="mb-1">@brand.BrandName</h6>
                                        <small class="text-muted">ID: @brand.BrandId.ToString().Substring(0, 8)...</small>
                                    </td>
                                    <td>
                                        <span class="badge bg-info">@brand.ProductCount products</span>
                                    </td>
                                    <td>
                                        @if (brand.IsActive == true)
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Inactive</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="text-muted">@brand.CreatedAt.ToString("MMM dd, yyyy")</span>
                                        <br>
                                        <small class="text-muted">@brand.CreatedAt.ToString("hh:mm tt")</small>
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <button type="button" class="btn btn-outline-info"
                                                    onclick="viewBrand('@brand.BrandId')" title="View">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                            <button type="button" class="btn btn-outline-primary"
                                                    onclick="editBrand('@brand.BrandId')" title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </button>
                                            <button type="button" class="btn btn-outline-success"
                                                    onclick="toggleBrandStatus('@brand.BrandId', @(brand.IsActive == true ? "true" : "false"))"
                                                    title="@(brand.IsActive == true ? "Deactivate" : "Activate")">
                                                <i class="fas fa-@(brand.IsActive == true ? "toggle-on" : "toggle-off")"></i>
                                            </button>
                                            <button type="button" class="btn btn-outline-warning"
                                                    onclick="viewProducts('@brand.BrandId')" title="View Products">
                                                <i class="fas fa-box"></i>
                                            </button>
                                            <button type="button" class="btn btn-outline-danger"
                                                    onclick="deleteBrand('@brand.BrandId')"
                                                    title="Delete">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Grid View -->
            <div id="gridView" style="display: none;">
                <div class="p-4">
                    <div class="row g-4" id="brandsGridContainer">
                        @foreach (var brand in Model)
                        {
                            <div class="col-xl-3 col-lg-4 col-md-6 brand-card"
                                 data-brand-id="@brand.BrandId"
                                 data-status="@(brand.IsActive == true ? "active" : "inactive")"
                                 data-name="@brand.BrandName.ToLower()">
                                <div class="card h-100">
                                    <div class="position-relative">
                                        <div class="card-img-top bg-light d-flex align-items-center justify-content-center"
                                             style="height: 150px;">
                                            @if (!string.IsNullOrEmpty(brand.BrandImage))
                                            {
                                                <img src="@brand.BrandImage" alt="@brand.BrandName"
                                                     style="max-width: 80%; max-height: 120px; object-fit: contain;">
                                            }
                                            else
                                            {
                                                <i class="fas fa-image fa-3x text-muted"></i>
                                            }
                                        </div>
                                        <div class="position-absolute top-0 start-0 p-2">
                                            <div class="form-check">
                                                <input class="form-check-input brand-checkbox" type="checkbox"
                                                       value="@brand.BrandId">
                                            </div>
                                        </div>
                                        <div class="position-absolute top-0 end-0 p-2">
                                            @if (brand.IsActive == true)
                                            {
                                                <span class="badge bg-success">Active</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Inactive</span>
                                            }
                                        </div>
                                    </div>
                                    <div class="card-body">
                                        <h5 class="card-title">@brand.BrandName</h5>
                                        <div class="mb-2">
                                            <span class="badge bg-info">@brand.ProductCount products</span>
                                        </div>
                                        <p class="text-muted small mb-3">
                                            <i class="fas fa-calendar me-1"></i>
                                            Added @brand.CreatedAt.ToString("MMM dd, yyyy")
                                        </p>
                                        <div class="d-grid gap-2">
                                            <div class="btn-group">
                                                <button type="button" class="btn btn-outline-primary btn-sm"
                                                        onclick="editBrand('@brand.BrandId')">
                                                    <i class="fas fa-edit me-1"></i>Edit
                                                </button>
                                                <button type="button" class="btn btn-outline-info btn-sm"
                                                        onclick="viewProducts('@brand.BrandId')">
                                                    <i class="fas fa-box me-1"></i>Products
                                                </button>
                                            </div>
                                            <button type="button" class="btn btn-outline-secondary btn-sm dropdown-toggle"
                                                    data-bs-toggle="dropdown">
                                                <i class="fas fa-ellipsis-h me-1"></i>More
                                            </button>
                                            <ul class="dropdown-menu">
                                                <li>
                                                    <a class="dropdown-item" href="#" onclick="viewBrand('@brand.BrandId')">
                                                        <i class="fas fa-eye me-2"></i>View Details
                                                    </a>
                                                </li>
                                                <li>
                                                    <a class="dropdown-item" href="#"
                                                       onclick="toggleBrandStatus('@brand.BrandId', @(brand.IsActive == true ? "true" : "false"))">
                                                        <i class="fas fa-toggle-@(brand.IsActive == true ? "off" : "on") me-2"></i>
                                                        @(brand.IsActive == true ? "Deactivate" : "Activate")
                                                    </a>
                                                </li>
                                                <li><hr class="dropdown-divider"></li>
                                                <li>
                                                    <a class="dropdown-item text-danger" href="#"
                                                       onclick="deleteBrand('@brand.BrandId', @brand.ProductCount)">
                                                        <i class="fas fa-trash me-2"></i>Delete
                                                    </a>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>

            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <i class="fas fa-tags fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">No brands found</h5>
                    <p class="text-muted">Start by adding your first brand.</p>
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addBrandModal">
                        <i class="fas fa-plus me-2"></i>Add First Brand
                    </button>
                </div>
            }
        </div>
    </div>

    <!-- Pagination -->
    @if (Model.Any())
    {
        <nav aria-label="Brands pagination" class="mt-4">
            <ul class="pagination justify-content-center">
                <li class="page-item disabled">
                    <a class="page-link" href="#">Previous</a>
                </li>
                <li class="page-item active">
                    <a class="page-link" href="#">1</a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="#">2</a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="#">3</a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="#">Next</a>
                </li>
            </ul>
        </nav>
    }
</div>

<!-- Add/Edit Brand Modal -->
<div class="modal fade" id="addBrandModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalTitle">Add New Brand</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="brandForm" enctype="multipart/form-data">
                <div class="modal-body">
                    <input type="hidden" id="brandId" name="BrandId">

                    <div class="mb-3">
                        <label for="brandName" class="form-label fw-semibold">
                            Brand Name <span class="text-danger">*</span>
                        </label>
                        <input type="text" class="form-control" id="brandName" name="BrandName"
                               placeholder="Enter brand name" required>
                    </div>
                    <div class="form-group">
                        <label for="BrandDescription" class="control-label">Brand Description</label>
                        <input type="text" name="BrandDescription" class="form-control" placeholder="Enter Description"/>                        
                        <span validation-for="BrandDescription" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label for="brandImage" class="form-label fw-semibold">Brand Logo</label>
                        <input type="file" class="form-control" id="brandImage" name="BrandImageFile" accept="image/*">
                        <small class="text-muted">Recommended size: 200x200px</small>
                        <div id="imagePreview" class="mt-2" style="display: none;">
                            <img id="previewImg" src="" alt="Preview" class="img-thumbnail" style="max-width: 150px;">
                        </div>
                    </div>

                    <div class="mb-3">
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" id="isActive" name="IsActive" checked>
                            <label class="form-check-label" for="isActive">Active</label>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary" id="saveBrandBtn">
                        <i class="fas fa-save me-2"></i>Save Brand
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- View Brand Details Modal -->
<div class="modal fade" id="viewBrandModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Brand Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="brandDetailsContent">
                <!-- Content loaded via AJAX -->
            </div>
        </div>
    </div>
</div>

<style>
    .brand-card {
        transition: transform 0.2s ease-in-out;
    }

        .brand-card:hover {
            transform: translateY(-5px);
        }

    .card:hover {
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }

    .table td {
        vertical-align: middle;
    }

    .btn-group-sm .btn {
        padding: 0.25rem 0.4rem;
    }
</style>


<script src="~/js/adminjs/brand.js"></script>

@section Scripts {
    <script>
        $(function () {
            @if (TempData["Success"] != null)
            {
                    <text>
                        showToast("@TempData["Success"]", "success");
                    </text>
            }

            @if (TempData["Error"] != null)
            {
                    <text>
                        showToast("@TempData["Error"]", "danger");
                    </text>
            }
        });
    </script>
}