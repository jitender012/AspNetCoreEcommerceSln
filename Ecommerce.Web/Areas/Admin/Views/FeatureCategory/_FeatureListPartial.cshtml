@using eCommerce.Application.DTO.ProductDTOs
@model IEnumerable<ProductFeatureDTO>
<h5>Related Features</h5>
@foreach (var features in Model)
{
    <div id="feature-row-@features.ProductFeatureId" class="d-flex">

        <input type="text" readonly value="@features.Name" class="form-control mb-2" />
        <div class="m-2 mt-0">      
            <button class=" btn btn-outline-danger delete-feature-btn" data-id="@features.ProductFeatureId">×</button>
        </div>
    </div>
}


<!-- Button trigger modal -->
@* <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteFeatureModal">
    ×
</button> *@
<!-- Modal -->
<div class="modal fade" id="deleteFeatureModal" tabindex="-1" aria-labelledby="deleteButtonLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteButtonLabel">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this feature?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" id="confirmDeleteBtn" class="btn btn-danger">Delete</button>
            </div>
        </div>
    </div>
</div>