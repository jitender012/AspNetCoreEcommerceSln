@using eCommerce.Application.DTO.ProductDTOs
@model IEnumerable<CategoryDTO>
<h5>Related Product Categories</h5>
@foreach (var productCategory in Model)
{
    <div id="product-category-@productCategory.CategoryId" class="d-flex">
        <input type="hidden" id="featureCategoryId" value="@productCategory.CategoryId"/>
        <input type="text" readonly value="@productCategory.CategoryName" class="form-control mb-2" />
        <div class="m-2 mt-0">
            <button class=" btn btn-outline-danger remove-productCategory-btn" data-id="@productCategory.CategoryId">×</button>            
        </div>

    </div>
}

<div class="modal fade" id="remove-productCategory" tabindex="-1" aria-labelledby="deleteButtonLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteButtonLabel">Remove Product Category</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
               
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" id="confirmRemoveBtn" class="btn btn-danger">Remove</button>
            </div>
        </div>
    </div>
</div>