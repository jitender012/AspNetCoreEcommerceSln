@using eCommerce.Domain.Entities
@model FeatureCategoryViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h4>Update Brand</h4>
<hr />

<div class="card py-4 px-5">

    @using (Html.BeginForm("Edit", "FeatureCategory", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="form row">
            <div class="col-12 col-md-6 col-lg-6 mt-3">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.FeatureCategoryId)

                <div class="form-group mb-2">
                    <label class="control-label">Feature Category Name</label>
                    <div class="">
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                </div>                     

                <div class="form-group mb-2">
                    <label class="control-label">Is Mandatory</label>
                    <div class="">
                        @Html.CheckBoxFor(model => model.IsMandatory, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.IsMandatory, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div>
                    <div class="col-md-offset-2 my-4">
                        <input type="submit" value="Update" class="btn btn-success w-100 bg-ad-primary" />
                    </div>
                </div>
            </div>

        </div>
    }

    <div class="card-footer">
        @Html.ActionLink("Back to List", "Index")
    </div>
</div>
