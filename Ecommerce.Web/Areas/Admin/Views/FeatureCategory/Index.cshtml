
@{
    ViewData["Title"] = "Feature Category Management";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@model List<FeatureCategoryListVm>

<div class="container-fluid py-4">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center flex-wrap">
                <div class="mb-2">
                    <h1 class="h3 mb-1">Feature Category Management</h1>
                    <p class="text-muted mb-0">Organize product features into logical categories</p>
                </div>
                <div class="d-flex gap-2 mb-2">
                    <button type="button" class="btn btn-outline-secondary" onclick="exportCategories()">
                        <i class="fas fa-download me-2"></i>Export
                    </button>
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createCategoryModal">
                        <i class="fas fa-plus me-2"></i>Add Category
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card text-white h-100" style="background-color: #3b5168;">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="card-title mb-2">Total Categories</h6>
                            <h3 class="mb-0">@Model.Count</h3>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-folder-open fa-2x opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card text-white h-100" style="background-color: #3d6655;">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="card-title mb-2">Mandatory</h6>
                            <h3 class="mb-0">@Model.Count(c => c.IsMandatory == true)</h3>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-star fa-2x opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card text-white h-100" style="background-color: #6b5d5a;">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="card-title mb-2">Optional</h6>
                            <h3 class="mb-0">@Model.Count(c => c.IsMandatory != true)</h3>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-info-circle fa-2x opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card text-white h-100" style="background-color: #4e5d7c;">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="card-title mb-2">Assigned</h6>
                            <h3 class="mb-0">@Model.Count(c => c.ProductCategoryName.HasValue)</h3>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-link fa-2x opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Filters and Search -->
    <div class="card mb-4">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-4">
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-search"></i></span>
                        <input type="text" class="form-control" id="searchInput" placeholder="Search categories...">
                    </div>
                </div>
                <div class="col-md-3">
                    <select class="form-select" id="statusFilter">
                        <option value="">All Status</option>
                        <option value="mandatory">Mandatory</option>
                        <option value="optional">Optional</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <select class="form-select" id="sortBy">
                        <option value="name-asc">Name A-Z</option>
                        <option value="name-desc">Name Z-A</option>
                        <option value="mandatory-first">Mandatory First</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <div class="btn-group w-100">
                        <button type="button" class="btn btn-outline-secondary active" id="gridViewBtn">
                            <i class="fas fa-th"></i>
                        </button>
                        <button type="button" class="btn btn-outline-secondary" id="listViewBtn">
                            <i class="fas fa-list"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bulk Actions -->
    <div class="card mb-4" id="bulkActionsCard" style="display: none;">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <span class="fw-semibold">Bulk Actions:</span>
                    <span id="selectedCount" class="text-muted ms-2">0 categories selected</span>
                </div>
                <div class="btn-group">
                    <button type="button" class="btn btn-warning btn-sm" onclick="bulkAction('mandatory')">
                        <i class="fas fa-star me-1"></i>Set Mandatory
                    </button>
                    <button type="button" class="btn btn-info btn-sm" onclick="bulkAction('optional')">
                        <i class="fas fa-info-circle me-1"></i>Set Optional
                    </button>
                    <button type="button" class="btn btn-danger btn-sm" onclick="bulkAction('delete')">
                        <i class="fas fa-trash me-1"></i>Delete
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Categories Grid View -->
    <div id="gridView">
        <div class="row g-4">
            @foreach (var category in Model)
            {
                <div class="col-xl-3 col-lg-4 col-md-6 category-card"
                     data-category-id="@category.FeatureCategoryId"
                     data-name="@category.Name.ToLower()"
                     data-mandatory="@(category.IsMandatory?.ToString().ToLower() ?? "false")">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <div class="form-check">
                                    <input class="form-check-input category-checkbox" type="checkbox"
                                           value="@category.FeatureCategoryId">
                                </div>
                                <div class="dropdown">
                                    <button class="btn btn-sm btn-link text-muted" type="button"
                                            data-bs-toggle="dropdown">
                                        <i class="fas fa-ellipsis-v"></i>
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-end">
                                        <li>
                                            <a class="dropdown-item" href="/admin/featurecategory/details/@category.FeatureCategoryId">
                                                <i class="fas fa-eye me-2"></i>View Details
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" href="#" onclick="editCategory(@category.FeatureCategoryId); return false;">
                                                <i class="fas fa-edit me-2"></i>Edit
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" href="#" onclick="manageAssignments(@category.FeatureCategoryId); return false;">
                                                <i class="fas fa-link me-2"></i>Manage Assignments
                                            </a>
                                        </li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <a class="dropdown-item text-danger" href="#" onclick="deleteCategory(@category.FeatureCategoryId); return false;">
                                                <i class="fas fa-trash me-2"></i>Delete
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>

                            <div class="text-center mb-3">
                                <div class="category-icon bg-light rounded-circle d-inline-flex align-items-center justify-content-center"
                                     style="width: 80px; height: 80px;">
                                    <i class="fas fa-folder fa-2x text-primary"></i>
                                </div>
                            </div>

                            <h5 class="card-title text-center mb-2">@category.Name</h5>

                            <div class="text-center mb-3">
                                @if (category.IsMandatory == true)
                                {
                                    <span class="badge bg-warning text-dark">
                                        <i class="fas fa-star me-1"></i>Mandatory
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">
                                        <i class="far fa-circle me-1"></i>Optional
                                    </span>
                                }
                            </div>

                            <div class="text-center">
                                <small class="text-muted">
                                    <i class="fas fa-layer-group me-1"></i>
                                    <span class="feature-count">-- features</span>
                                </small>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent">
                            <div class="d-flex justify-content-between">
                                <a type="button" class="btn btn-sm btn-outline-primary"
                                   href="@Url.ActionLink("Details", "FeatureCategory", new { FeatureCategoryId = category.FeatureCategoryId })">
                                    <i class="fas fa-eye me-1"></i>View
                                </a>
                                <button type="button" class="btn btn-sm btn-outline-secondary"
                                        onclick="manageAssignments(@category.FeatureCategoryId)">
                                    <i class="fas fa-link me-1"></i>Assign
                                </button>
                                <button type="button" class="btn btn-sm btn-outline-success"
                                        onclick="editCategory(@category.FeatureCategoryId)">
                                    <i class="fas fa-edit"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Categories List View -->
    <div id="listView" style="display: none;">
        <div class="card">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th width="40">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="selectAll">
                                    </div>
                                </th>
                                <th width="50"><i class="fas fa-star text-warning"></i></th>
                                <th>Category Name</th>
                                <th width="120">Features</th>
                                <th width="150">Status</th>
                                <th width="180">Assigned To</th>
                                <th width="200">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var category in Model)
                            {
                                <tr data-category-id="@category.FeatureCategoryId"
                                    data-name="@category.Name.ToLower()"
                                    data-mandatory="@(category.IsMandatory?.ToString().ToLower() ?? "false")">
                                    <td>
                                        <div class="form-check">
                                            <input class="form-check-input category-checkbox" type="checkbox"
                                                   value="@category.FeatureCategoryId">
                                        </div>
                                    </td>
                                    <td class="text-center">
                                        @if (category.IsMandatory == true)
                                        {
                                            <i class="fas fa-star text-warning" title="Mandatory"></i>
                                        }
                                        else
                                        {
                                            <i class="far fa-circle text-muted" title="Optional"></i>
                                        }
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="category-icon-sm bg-light rounded-circle d-inline-flex align-items-center justify-content-center me-2"
                                                 style="width: 40px; height: 40px;">
                                                <i class="fas fa-folder text-primary"></i>
                                            </div>
                                            <div>
                                                <h6 class="mb-0">@category.Name</h6>
                                                <small class="text-muted">ID: @category.FeatureCategoryId</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge bg-info">-- features</span>
                                    </td>
                                    <td>
                                        @if (category.IsMandatory == true)
                                        {
                                            <span class="badge bg-warning text-dark">
                                                <i class="fas fa-star me-1"></i>Mandatory
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">
                                                <i class="far fa-circle me-1"></i>Optional
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        @if (category.ProductCategoryName.HasValue)
                                        {
                                            <span class="badge bg-success">
                                                <i class="fas fa-link me-1"></i>Assigned
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Not Assigned</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <button type="button" class="btn btn-outline-info" href="/admin/featurecategory/details/@category.FeatureCategoryId"
                                                  >
                                                <i class="fas fa-eye"></i>
                                            </button>
                                            <button type="button" class="btn btn-outline-primary"
                                                    onclick="editCategory(@category.FeatureCategoryId)">
                                                <i class="fas fa-edit"></i>
                                            </button>
                                            <button type="button" class="btn btn-outline-secondary"
                                                    onclick="manageAssignments(@category.FeatureCategoryId)">
                                                <i class="fas fa-link"></i>
                                            </button>
                                            <button type="button" class="btn btn-outline-warning"
                                                    onclick="toggleMandatory(@category.FeatureCategoryId, @(category.IsMandatory?.ToString().ToLower() ?? "false"))">
                                                <i class="fas fa-star"></i>
                                            </button>
                                            <button type="button" class="btn btn-outline-danger"
                                                    onclick="deleteCategory(@category.FeatureCategoryId)">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="card">
            <div class="card-body text-center py-5">
                <i class="fas fa-folder-open fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">No feature categories found</h5>
                <p class="text-muted">Start by creating your first feature category.</p>
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createCategoryModal">
                    <i class="fas fa-plus me-2"></i>Add First Category
                </button>
            </div>
        </div>
    }
</div>

<!-- Create/Edit Category Modal -->
<div class="modal fade" id="createCategoryModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalTitle">Add Feature Category</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="categoryForm">
                <div class="modal-body">
                    <input type="hidden" id="categoryId">

                    <div class="mb-3">
                        <label for="categoryName" class="form-label fw-semibold">
                            Category Name <span class="text-danger">*</span>
                        </label>
                        <input type="text" class="form-control" id="categoryName"
                               placeholder="e.g., Dimensions, Warranty, General" required>
                        <small class="form-text text-muted">
                            Examples: Display, Storage, Memory, Physical Dimensions, Warranty
                        </small>
                    </div>

                    <div class="mb-3">
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" id="isMandatory"
                                   style="width: 3em; height: 1.5em;">
                            <label class="form-check-label ms-2" for="isMandatory">
                                <strong>Mandatory Category</strong>
                            </label>
                        </div>
                        <small class="form-text text-muted">
                            If checked, at least one feature from this category must be provided
                        </small>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary" id="saveCategoryBtn">
                        <i class="fas fa-save me-2"></i>Save Category
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Manage Assignments Modal -->
<div class="modal fade" id="assignmentsModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Manage Category Assignments</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p class="text-muted">Select product categories where this feature category should be available:</p>
                <div id="assignmentsContent">
                    <div class="row">
                        <div class="col-md-6 mb-2">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="cat1" value="1">
                                <label class="form-check-label" for="cat1">Electronics</label>
                            </div>
                        </div>
                        <div class="col-md-6 mb-2">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="cat2" value="2">
                                <label class="form-check-label" for="cat2">Clothing</label>
                            </div>
                        </div>
                        <div class="col-md-6 mb-2">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="cat3" value="3">
                                <label class="form-check-label" for="cat3">Home & Garden</label>
                            </div>
                        </div>
                        <div class="col-md-6 mb-2">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="cat4" value="4">
                                <label class="form-check-label" for="cat4">Sports & Outdoors</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" onclick="saveAssignments()">
                    <i class="fas fa-save me-2"></i>Save Assignments
                </button>
            </div>
        </div>
    </div>
</div>

<style>
    .category-card {
        transition: transform 0.2s ease;
    }

        .category-card:hover {
            transform: translateY(-5px);
        }

    .card {
        transition: box-shadow 0.3s ease;
    }

        .card:hover {
            box-shadow: 0 4px 20px rgba(0,0,0,0.1);
        }

    .category-icon {
        transition: all 0.3s ease;
    }

    .category-card:hover .category-icon {
        transform: scale(1.1);
    }

    .table td {
        vertical-align: middle;
    }
</style>


<script src="~/js/adminjs/feature-category.js"></script>