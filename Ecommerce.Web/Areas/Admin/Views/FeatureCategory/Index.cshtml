@model List<FeatureCategoryViewModel>
<style>
    .dt-layout-cell {
        width: 100%;
    }

    .dt-paging-button {
        margin: 3px;
    }

    .page-link {
        border: 1px solid lightgrey;
        padding-right: 8px;
        padding-left: 8px;
    }
    .dt-layout-table{
        background-color:white;
    }
</style>
@{    
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<link href="~/lib/datatables.net-bs5/datatables.bootstrap5.min.css" rel="stylesheet" />
<script src="~/js/jquery code/adminjs/featurecategory.js"></script>

<div class="d-flex justify-content-between align-items-end mb-3">
    <div>
        <a href="@Url.Action("Dashboard","Dashboard")" style=" color: #6ebb4a; font-size: 14px; font-weight: 600;">
            Home
            <i class="fas fa-angle-right" style="color: #c1cdc2;"></i>

        </a>
        <h4>
            FeatureCategories
        </h4>
    </div>
    <div>
        <a href="@Url.Action("Create", "FeatureCategory")" class="btn btn-success">            
           Create New
        </a>
    </div>
</div>
<div class="table-div">
    <table class="table table-bordered table-hover w-100" id="myTable">
        <thead>
            <tr>
                <th>
                    Feature Category Name
                </th>
                <th>
                    Is Mandatory
                </th>
                <th>
                    Created By
                </th>
                <th></th>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr id="@item.FeatureCategoryId">
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsMandatory)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.CreatedBy)
                </td>
                <td style="text-align:center;vertical-align:middle">
                    <div class="btn-group">
                        <a href="@Url.Action("Edit", "FeatureCategory", new {id= item.FeatureCategoryId})" class=" btn btn-outline-info"> Edit</a>
                        <a href="@Url.Action("Details", "FeatureCategory", new {FeatureCategoryId= item.FeatureCategoryId})" class=" btn btn-outline-info"> Details</a>
                        <a href="#" class="delete-feature-category-btn btn btn-outline-danger" name="FeatureCategory_id" data-id="@item.FeatureCategoryId">Delete</a>
                    </div>
                </td>
            </tr>
        }

    </table>
</div>

<script src="~/lib/datatables/js/datatables.js"></script>
<script src="~/lib/datatables.net-bs5/datatables.bootstrap5.min.js"></script>

