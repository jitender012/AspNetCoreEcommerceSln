@model FeatureCategoryViewModel

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@if (ViewBag.IsSuccess != null)
{
    <h4 style="color:green">@ViewBag.IsSuccess</h4>
}

<div class="container p-5">

    @using (Html.BeginForm("Create", "FeatureCategory", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal ">
            <h4>Create Feature Category</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group col-md-8">
                <label class="contro l-label col-md-6">Feature Category Name</label>
                <div class="col-md-12">

                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })

                </div>
            </div>
            <div class="form-group col-md-8">
                <label class="control-label col-md-6">Is Mandatory</label>
                <div class="col-md-12">

                    @Html.EditorFor(model => model.IsMandatory, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.IsMandatory, "", new { @class = "text-danger" })

                </div>
            </div>
          <div class="form-group">
                <label class="control-label col-md-2">Product Category Name</label>
                <div class="col-md-10">

                    <div class="form-group">                        
                        @Html.DropDownListFor(
                                 model => model.ProductCategoryId,
                                 (IEnumerable<SelectListItem>)ViewBag.ProductCategories,
                                 "Select a Product Category",
                                 new { @class = "form-control" }
                                 )
                    </div>

                </div>
            </div> 
            
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
    <br />
    <div>
        @Html.ActionLink("Back to List", "Index", "FeatureCategory")
    </div>

</div>
