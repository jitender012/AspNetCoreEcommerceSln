@model List<FeatureListVM>
<style>
    .dt-layout-cell {
        width: 100%;
    }

    .dt-paging-button {
        margin: 3px;
    }

    .page-link {
        border: 1px solid lightgrey;
        padding-right: 8px;
        padding-left: 8px;
    }
    h6, h3{
        color:white !important;
    }
</style>
@{
    ViewData["Title"] = "Feature Management";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="container-fluid py-4">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center flex-wrap">
                <div class="mb-2">
                    <h1 class="h3 mb-1">Product Features Management</h1>
                    <p class="text-muted mb-0">Manage product attributes like RAM, Storage, Display specifications</p>
                </div>
                <div class="d-flex gap-2 mb-2">
                    <button type="button" class="btn btn-outline-info" data-bs-toggle="modal" data-bs-target="#categoriesModal">
                        <i class="fas fa-folder me-2"></i>Manage Categories
                    </button>
                    <button type="button" class="btn btn-outline-secondary" onclick="exportFeatures()">
                        <i class="fas fa-download me-2"></i>Export
                    </button>
                    <a href="/admin/productfeature/create" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>Add Feature
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card text-white h-100" style="background-color: #8ea5e1;">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="card-title mb-2">Total Features</h6>
                            <h3 class="mb-0">@Model.Count</h3>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-list-alt fa-2x opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card text-white h-100" style="background-color: #dd9090;">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="card-title mb-2">Mandatory</h6>
                            <h3 class="mb-0">@Model.Count(f => f.IsManadatory == true)</h3>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-star fa-2x opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card text-white h-100" style="background-color: #91cb97;">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="card-title mb-2">Categories</h6>
                            <h3 class="mb-0">@Model.Select(f => f.FeatureCategoryName).Distinct().Count()</h3>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-folder fa-2x opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card text-white h-100" style="background-color: #eded96;">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="card-title mb-2">Optional</h6>
                            <h3 class="mb-0">@Model.Count(f => f.IsManadatory != true)</h3>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-info-circle fa-2x opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Filters -->
    <div class="card mb-4">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-3">
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-search"></i></span>
                        <input type="text" class="form-control" id="searchInput" placeholder="Search features...">
                    </div>
                </div>
                <div class="col-md-3">
                    <select class="form-select" id="categoryFilter">
                        <option value="">All Categories</option>
                        @foreach (var category in Model.Select(f => f.FeatureCategoryName).Distinct().OrderBy(c => c))
                        {
                            <option value="@category">@category</option>
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <select class="form-select" id="typeFilter">
                        <option value="">All Types</option>
                        <option value="0">Text</option>
                        <option value="1">Number</option>
                        <option value="2">Dropdown</option>
                        <option value="3">Checkbox</option>
                        <option value="4">Radio</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <select class="form-select" id="mandatoryFilter">
                        <option value="">All Features</option>
                        <option value="true">Mandatory Only</option>
                        <option value="false">Optional Only</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <select class="form-select" id="sortBy">
                        <option value="name-asc">Name A-Z</option>
                        <option value="name-desc">Name Z-A</option>
                        <option value="category-asc">Category A-Z</option>
                        <option value="mandatory-first">Mandatory First</option>
                    </select>
                </div>
            </div>
        </div>
    </div>

    <!-- Bulk Actions -->
    <div class="card mb-4" id="bulkActionsCard" style="display: none;">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <span class="fw-semibold">Bulk Actions:</span>
                    <span id="selectedCount" class="text-muted ms-2">0 features selected</span>
                </div>
                <div class="btn-group">
                    <button type="button" class="btn btn-warning btn-sm" onclick="bulkAction('mandatory')">
                        <i class="fas fa-star me-1"></i>Set Mandatory
                    </button>
                    <button type="button" class="btn btn-info btn-sm" onclick="bulkAction('optional')">
                        <i class="fas fa-info-circle me-1"></i>Set Optional
                    </button>
                    <button type="button" class="btn btn-danger btn-sm" onclick="bulkAction('delete')">
                        <i class="fas fa-trash me-1"></i>Delete
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Features List -->
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="card-title mb-0">Features</h5>
            <small class="text-muted">
                Showing <span id="showingCount">@Model.Count</span> of <span id="totalCount">@Model.Count</span> features
            </small>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th width="40">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="selectAll">
                                </div>
                            </th>
                            <th width="50">
                                <i class="fas fa-star text-warning" title="Mandatory"></i>
                            </th>
                            <th>Feature Name</th>
                            <th width="180">Category</th>
                            <th width="150">Input Type</th>
                            <th width="120">Unit</th>                            
                            <th width="200">Actions</th>
                        </tr>
                    </thead>
                    <tbody id="featuresTableBody">
                        @foreach (var feature in Model)
                        {
                           @*  var inputTypeText = feature.InputType switch
                            {
                                0 => "Text",
                                1 => "Number",
                                2 => "Dropdown",
                                3 => "Checkbox",
                                4 => "Radio",
                                _ => "Unknown"
                            };

                            var inputTypeIcon = feature.InputType switch
                            {
                                0 => "fa-font",
                                1 => "fa-hashtag",
                                2 => "fa-caret-square-down",
                                3 => "fa-check-square",
                                4 => "fa-dot-circle",
                                _ => "fa-question"
                            };

                            var inputTypeColor = feature.InputType switch
                            {
                                0 => "primary",
                                1 => "success",
                                2 => "info",
                                3 => "warning",
                                4 => "secondary",
                                _ => "dark"
                            }; *@

                            <tr data-feature-id="@feature.ProductFeaturesId" 
                                data-category="@feature.FeatureCategoryName"
                                data-type="@((int)feature.InputType)"
                                data-mandatory="@(feature.IsManadatory?.ToString().ToLower() ?? "false")"
                                data-name="@feature.Name.ToLower()">
                                <td>
                                    <div class="form-check">
                                        <input class="form-check-input feature-checkbox" type="checkbox" 
                                               value="@feature.ProductFeaturesId">
                                    </div>
                                </td>
                                <td class="text-center">
                                    @if (feature.IsManadatory == true)
                                    {
                                        <i class="fas fa-star text-warning" title="Mandatory"></i>
                                    }
                                    else
                                    {
                                        <i class="far fa-circle text-muted" title="Optional"></i>
                                    }
                                </td>
                                <td>
                                    <div>
                                        <h6 style="color:black !important" class="mb-1">@feature.Name</h6>
                                        <small class="text-muted">ID: @feature.ProductFeaturesId</small>
                                    </div>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(feature.FeatureCategoryName))
                                    {
                                        <span class="badge bg-secondary">
                                            <i class="fas fa-folder me-1"></i>@feature.FeatureCategoryName
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Uncategorized</span>
                                    }
                                </td>
                               @*  <td>
                                    <span class="badge bg-@inputTypeColor">
                                        <i class="fas @inputTypeIcon me-1"></i>@inputTypeText
                                    </span>
                                </td> *@
                                <td>

                                <i class="fas me-1"></i>@feature.InputType
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(feature.MeasurementUnit))
                                    {
                                        <span class="badge bg-light text-dark border">@feature.MeasurementUnit</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                              
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a href="/admin/productfeature/details?ProductFeatureId=@feature.ProductFeaturesId"
                                           class="btn btn-outline-info" title="View">
                                            <i class="fas fa-eye"></i>
                                        </a>

                                        <a href="/admin/features/@feature.ProductFeaturesId/edit" 
                                           class="btn btn-outline-primary" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <button type="button" class="btn btn-outline-warning" 
                                                onclick="toggleMandatory(@feature.ProductFeaturesId, @(feature.IsManadatory?.ToString().ToLower() ?? "false"))" 
                                                title="Toggle Mandatory">
                                            <i class="fas fa-star"></i>
                                        </button>
                                        <button type="button" class="btn btn-outline-success" 
                                                onclick="duplicateFeature(@feature.ProductFeaturesId)" 
                                                title="Duplicate">
                                            <i class="fas fa-copy"></i>
                                        </button>
                                        <button type="button" class="btn btn-outline-danger" 
                                                onclick="deleteFeature(@feature.ProductFeaturesId)" 
                                                title="Delete">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <i class="fas fa-list-alt fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">No features found</h5>
                    <p class="text-muted">Start by adding your first product feature.</p>
                    <a href="/admin/features/create" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>Add First Feature
                    </a>
                </div>
            }
        </div>
    </div>

    <!-- Pagination -->
    @if (Model.Any())
    {
        <nav aria-label="Features pagination" class="mt-4">
            <ul class="pagination justify-content-center">
                <li class="page-item disabled">
                    <a class="page-link" href="#">Previous</a>
                </li>
                <li class="page-item active">
                    <a class="page-link" href="#">1</a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="#">2</a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="#">3</a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="#">Next</a>
                </li>
            </ul>
        </nav>
    }
</div>

<!-- Feature Options Modal -->
<div class="modal fade" id="optionsModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Feature Options</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="optionsContent">
                <!-- Options will be loaded here -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="editOptionsBtn">
                    <i class="fas fa-edit me-2"></i>Edit Options
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Categories Management Modal -->
<div class="modal fade" id="categoriesModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-folder me-2"></i>Feature Categories
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <div class="input-group">
                        <input type="text" class="form-control" id="newCategoryName" 
                               placeholder="Enter new category name (e.g., Display, Storage)">
                        <button type="button" class="btn btn-primary" onclick="addCategory()">
                            <i class="fas fa-plus me-2"></i>Add
                        </button>
                    </div>
                </div>
                <div class="table-responsive">
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Category Name</th>
                                <th width="100">Features</th>
                                <th width="100">Actions</th>
                            </tr>
                        </thead>
                        <tbody id="categoriesTableBody">
                            @foreach (var category in Model.GroupBy(f => f.FeatureCategoryName).OrderBy(g => g.Key))
                            {
                                <tr>
                                    <td>
                                        <i class="fas fa-folder me-2 text-secondary"></i>
                                        <strong>@category.Key</strong>
                                    </td>
                                    <td>
                                        <span class="badge bg-info">@category.Count()</span>
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <button type="button" class="btn btn-outline-primary" 
                                                    onclick="editCategory('@category.Key')">
                                                <i class="fas fa-edit"></i>
                                            </button>
                                            <button type="button" class="btn btn-outline-danger" 
                                                    onclick="deleteCategory('@category.Key', @category.Count())">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.table td {
    vertical-align: middle;
}

.btn-group-sm .btn {
    padding: 0.25rem 0.4rem;
}

.badge {
    font-size: 0.75rem;
}

.table tbody tr:hover {
    background-color: #f8f9fa;
}

.feature-checkbox:checked {
    background-color: #0d6efd;
    border-color: #0d6efd;
}
</style>
<script src="~/js/adminjs/product-feature.js"></script>

@section Scripts {
    <script>
        $(function () {
            @if (TempData["Success"] != null)
            {
                        <text>
                            showToast("@TempData["Success"]", "success");
                        </text>
            }

            @if (TempData["Error"] != null)
            {
                        <text>
                            showToast("@TempData["Error"]", "danger");
                        </text>
            }
        });
    </script>
}