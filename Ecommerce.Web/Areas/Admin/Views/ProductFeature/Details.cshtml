@{
    ViewData["Title"] = "Feature Details - " + Model.Name;
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@model FeatureDetailsVM

<div class="container-fluid py-4">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center flex-wrap">
                <div class="mb-2">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/admin/dashboard" class="text-decoration-none">Dashboard</a></li>
                            <li class="breadcrumb-item"><a href="/admin/features" class="text-decoration-none">Features</a></li>
                            <li class="breadcrumb-item active">@Model.Name</li>
                        </ol>
                    </nav>
                    <h1 class="h3 mb-1">
                        <i class="fas fa-list-alt me-2"></i>@Model.Name
                    </h1>
                    @if (Model.IsManadatory == true)
                    {
                        <span class="badge bg-warning text-dark">
                            <i class="fas fa-star me-1"></i>Mandatory Feature
                        </span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">
                            <i class="far fa-circle me-1"></i>Optional Feature
                        </span>
                    }
                </div>
                <div class="d-flex gap-2 mb-2">
                    <a href="/admin/features" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Back to List
                    </a>
                    <a href="/admin/features/@Model.ProductFeaturesId/edit" class="btn btn-primary">
                        <i class="fas fa-edit me-2"></i>Edit Feature
                    </a>
                    <div class="btn-group">
                        <button type="button" class="btn btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown">
                            <i class="fas fa-ellipsis-v"></i>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li>
                                <a class="dropdown-item" href="#" onclick="duplicateFeature(); return false;">
                                    <i class="fas fa-copy me-2"></i>Duplicate
                                </a>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <a class="dropdown-item text-danger" href="#" onclick="deleteFeature(); return false;">
                                    <i class="fas fa-trash me-2"></i>Delete
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Main Content -->
        <div class="col-lg-8">
            <!-- Basic Information Card -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-info-circle me-2"></i>Basic Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small mb-1">Feature ID</label>
                            <p class="mb-0 fw-semibold">@Model.ProductFeaturesId</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small mb-1">Feature Name</label>
                            <p class="mb-0 fw-semibold">@Model.Name</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small mb-1">Category</label>
                            <p class="mb-0">
                                @if (!string.IsNullOrEmpty(Model.FeatureCategoryName))
                                {
                                    <span class="badge bg-secondary">
                                        <i class="fas fa-folder me-1"></i>@Model.FeatureCategoryName
                                    </span>
                                }
                                else
                                {
                                    <span class="text-muted">Uncategorized</span>
                                }
                            </p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small mb-1">Measurement Unit</label>
                            <p class="mb-0">
                                @if (!string.IsNullOrEmpty(Model.MeasurementUnit))
                                {
                                    <span class="badge bg-light text-dark border">@Model.MeasurementUnit</span>
                                }
                                else
                                {
                                    <span class="text-muted">No unit specified</span>
                                }
                            </p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small mb-1">Input Type</label>
                            <p class="mb-0">
                                @{
                                    var inputTypeText = Model.InputType switch
                                    {
                                        eCommerce.Domain.Entities.FeatureInputType.Textbox => "Text",
                                        eCommerce.Domain.Entities.FeatureInputType.Number => "Number",
                                        eCommerce.Domain.Entities.FeatureInputType.Dropdown => "Dropdown",
                                        eCommerce.Domain.Entities.FeatureInputType.Boolean => "Checkbox",                                                                                
                                    };

                                    var inputTypeIcon = Model.InputType switch
                                    {
                                        eCommerce.Domain.Entities.FeatureInputType.Textbox  => "fa-font",
                                        eCommerce.Domain.Entities.FeatureInputType.Number  => "fa-hashtag",
                                        eCommerce.Domain.Entities.FeatureInputType.Dropdown  => "fa-caret-square-down",
                                        eCommerce.Domain.Entities.FeatureInputType.Boolean  => "fa-check-square",                                       
                                    };

                                    var inputTypeColor = Model.InputType switch
                                    {
                                        eCommerce.Domain.Entities.FeatureInputType.Textbox  => "primary",
                                        eCommerce.Domain.Entities.FeatureInputType.Number  => "success",
                                        eCommerce.Domain.Entities.FeatureInputType.Dropdown  => "info",
                                        eCommerce.Domain.Entities.FeatureInputType.Boolean  => "warning",                                      
                                    };
                                }
                                <span class="badge bg-@inputTypeColor">
                                    <i class="fas @inputTypeIcon me-1"></i>@inputTypeText
                                </span>
                            </p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small mb-1">Required Status</label>
                            <p class="mb-0">
                                @if (Model.IsManadatory == true)
                                {
                                    <span class="badge bg-warning text-dark">
                                        <i class="fas fa-star me-1"></i>Mandatory
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">
                                        <i class="far fa-circle me-1"></i>Optional
                                    </span>
                                }
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Feature Options Card -->
            @if (Model.InputType == eCommerce.Domain.Entities.FeatureInputType.Dropdown || Model.InputType == eCommerce.Domain.Entities.FeatureInputType.Boolean )
            {
                <div class="card mb-4">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-list me-2"></i>Feature Options
                        </h5>
                        <a href="/admin/features/@Model.ProductFeaturesId/options/edit" class="btn btn-sm btn-outline-primary">
                            <i class="fas fa-edit me-1"></i>Manage Options
                        </a>
                    </div>
                    <div class="card-body">
                        @if (Model.FeatureOptions != null && Model.FeatureOptions.Any())
                        {
                            <div class="list-group">
                                @foreach (var option in Model.FeatureOptions)
                                {
                                    <div class="list-group-item d-flex justify-content-between align-items-center">
                                        <div class="d-flex align-items-center">
                                            @if (Model.InputType == eCommerce.Domain.Entities.FeatureInputType.Dropdown)
                                            {
                                                <i class="fas fa-check-square text-warning me-2"></i>
                                            }                                           
                                            else
                                            {
                                                <i class="fas fa-caret-square-down text-info me-2"></i>
                                            }
                                            <span>@option</span>
                                        </div>
                                    </div>
                                }
                            </div>
                            <div class="mt-3 text-muted">
                                <small>
                                    <i class="fas fa-info-circle me-1"></i>
                                    Total Options: <strong>@Model.FeatureOptions.Count</strong>
                                </small>
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-4">
                                <i class="fas fa-inbox fa-2x text-muted mb-3"></i>
                                <p class="text-muted mb-3">No options configured yet</p>
                                <a href="/admin/features/@Model.ProductFeaturesId/options/edit" class="btn btn-primary">
                                    <i class="fas fa-plus me-2"></i>Add Options
                                </a>
                            </div>
                        }
                    </div>
                </div>
            }
            else
            {
                <div class="card mb-4 border-info">
                    <div class="card-body text-center py-4">
                        <i class="fas @inputTypeIcon fa-2x text-@inputTypeColor mb-3"></i>
                        <h6 class="text-muted">This feature uses @inputTypeText input type</h6>
                        <p class="text-muted small mb-0">Options are not applicable for this input type</p>
                    </div>
                </div>
            }

            <!-- Usage Information Card -->
            <div class="card mb-4 border-primary">
                <div class="card-header bg-primary text-white">
                    <h6 class="card-title mb-0">
                        <i class="fas fa-info-circle me-2"></i>Usage Information
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 text-center mb-3">
                            <div class="p-3 bg-light rounded">
                                <i class="fas fa-box fa-2x text-primary mb-2"></i>
                                <h4 class="mb-1">--</h4>
                                <small class="text-muted">Products Using</small>
                            </div>
                        </div>
                        <div class="col-md-4 text-center mb-3">
                            <div class="p-3 bg-light rounded">
                                <i class="fas fa-layer-group fa-2x text-success mb-2"></i>
                                <h4 class="mb-1">--</h4>
                                <small class="text-muted">Categories Using</small>
                            </div>
                        </div>
                        <div class="col-md-4 text-center mb-3">
                            <div class="p-3 bg-light rounded">
                                <i class="fas fa-chart-line fa-2x text-info mb-2"></i>
                                <h4 class="mb-1">--</h4>
                                <small class="text-muted">Times Used</small>
                            </div>
                        </div>
                    </div>
                    <hr>
                    <p class="text-muted small mb-0">
                        <i class="fas fa-lightbulb me-1"></i>
                        <strong>Note:</strong> This feature can be used when creating product variants to specify different configurations.
                    </p>
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <!-- Quick Actions Card -->
            <div class="card mb-4">
                <div class="card-header">
                    <h6 class="card-title mb-0">
                        <i class="fas fa-bolt me-2"></i>Quick Actions
                    </h6>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="/admin/features/@Model.ProductFeaturesId/edit" class="btn btn-primary">
                            <i class="fas fa-edit me-2"></i>Edit Feature
                        </a>
                        @if (Model.InputType == eCommerce.Domain.Entities.FeatureInputType.Dropdown || Model.InputType == eCommerce.Domain.Entities.FeatureInputType.Boolean)
                        {
                            <a href="/admin/features/@Model.ProductFeaturesId/options/edit" class="btn btn-outline-info">
                                <i class="fas fa-list me-2"></i>Manage Options
                            </a>
                        }
                        <form asp-action="ToggleMandatory" asp-route-id="@Model.ProductFeaturesId" method="post" class="d-inline">
                            <button type="submit" class="btn btn-outline-warning w-100">
                                <i class="fas fa-star me-2"></i>
                                @if (Model.IsManadatory == true)
                                {
                                    <span>Set as Optional</span>
                                }
                                else
                                {
                                    <span>Set as Mandatory</span>
                                }
                            </button>
                        </form>
                        <hr class="my-2">
                        <button type="button" class="btn btn-outline-secondary" onclick="duplicateFeature()">
                            <i class="fas fa-copy me-2"></i>Duplicate Feature
                        </button>
                        <button type="button" class="btn btn-outline-danger" onclick="deleteFeature()">
                            <i class="fas fa-trash me-2"></i>Delete Feature
                        </button>
                    </div>
                </div>
            </div>

            <!-- Feature Details Card -->
            <div class="card mb-4">
                <div class="card-header">
                    <h6 class="card-title mb-0">
                        <i class="fas fa-cog me-2"></i>Configuration
                    </h6>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled mb-0">
                        <li class="mb-3">
                            <div class="d-flex align-items-start">
                                <i class="fas fa-check-circle text-success me-2 mt-1"></i>
                                <div>
                                    <strong class="d-block">Input Type</strong>
                                    <small class="text-muted">Sellers will use @inputTypeText input</small>
                                </div>
                            </div>
                        </li>
                        @if (!string.IsNullOrEmpty(Model.MeasurementUnit))
                        {
                            <li class="mb-3">
                                <div class="d-flex align-items-start">
                                    <i class="fas fa-ruler text-primary me-2 mt-1"></i>
                                    <div>
                                        <strong class="d-block">Unit: @Model.MeasurementUnit</strong>
                                        <small class="text-muted">Values will be shown with this unit</small>
                                    </div>
                                </div>
                            </li>
                        }
                        <li class="mb-3">
                            <div class="d-flex align-items-start">
                                @if (Model.IsManadatory == true)
                                {
                                    <i class="fas fa-star text-warning me-2 mt-1"></i>
                                    <div>
                                        <strong class="d-block">Mandatory Field</strong>
                                        <small class="text-muted">Required when creating variants</small>
                                    </div>
                                }
                                else
                                {
                                    <i class="far fa-circle text-muted me-2 mt-1"></i>
                                    <div>
                                        <strong class="d-block">Optional Field</strong>
                                        <small class="text-muted">Not required for variants</small>
                                    </div>
                                }
                            </div>
                        </li>
                        @if (!string.IsNullOrEmpty(Model.FeatureCategoryName))
                        {
                            <li class="mb-0">
                                <div class="d-flex align-items-start">
                                    <i class="fas fa-folder text-secondary me-2 mt-1"></i>
                                    <div>
                                        <strong class="d-block">Category</strong>
                                        <small class="text-muted">@Model.FeatureCategoryName</small>
                                    </div>
                                </div>
                            </li>
                        }
                    </ul>
                </div>
            </div>

            <!-- Help Card -->
            <div class="card border-info">
                <div class="card-header bg-info text-white">
                    <h6 class="card-title mb-0">
                        <i class="fas fa-question-circle me-2"></i>About This Feature
                    </h6>
                </div>
                <div class="card-body">
                    <p class="small mb-2">
                        <strong>How it works:</strong>
                    </p>
                    <ul class="small mb-0">
                        <li class="mb-2">Sellers use this to define product specifications</li>
                        <li class="mb-2">Customers can filter products by this feature</li>
                        @if (Model.IsManadatory == true)
                        {
                            <li class="mb-2">Must be provided for every product variant</li>
                        }
                        @if (Model.InputType == eCommerce.Domain.Entities.FeatureInputType.Dropdown || Model.InputType == eCommerce.Domain.Entities.FeatureInputType.Boolean)
                        {
                            <li class="mb-0">Options are pre-defined for consistency</li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>


<script>
    function duplicateFeature() {
        if (confirm('Create a copy of this feature?')) {
            window.location.href = '/admin/features/@Model.ProductFeaturesId/duplicate';
        }
    }

    function deleteFeature() {
        if (confirm('Are you sure you want to delete this feature? This action cannot be undone.')) {
            const form = document.createElement('form');
            form.method = 'POST';
            form.action = '/admin/features/@Model.ProductFeaturesId/delete';
            document.body.appendChild(form);
            form.submit();
        }
    }
</script>