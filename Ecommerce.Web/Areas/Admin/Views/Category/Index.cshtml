    @if (!Model.Any())
    {
        <div class="card">
            <div class="card-body text-center py-5">
                <i class="fas fa-th-large fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">No product categories found</h5>
                <p class="text-muted">Start by creating your first product category.</p>
                <a href="/admin/product-categories/create" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i>Add First Category
                </a>
            </div>
        </div>
    }
</div>

<style>
    .category-card {
        transition: transform 0.2s ease;
    }

        .category-card:hover {
            transform: translateY(-5px);
        }

    .card {
        transition: box-shadow 0.3s ease;
    }

        .card:hover {
            box-shadow: 0 4px 20px rgba(0,0,0,0.1);
        }

    .tree-node {
        transition: all 0.3s ease;
    }

        .tree-node:hover {
            transform: translateX(5px);
        }

    .table td {
        vertical-align: middle;
    }
</style>

