@{
    ViewData["Title"] = "Product Management - ";
    Layout = "~/Areas/Seller/Views/Shared/_VendorLayout.cshtml";
}

<style>
    .card-title{
        color: white;
    }
</style>
@model ProductDetailsVM

<div class="container-fluid py-4">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                 @*    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/seller/dashboard" class="text-decoration-none">Dashboard</a></li>
                            <li class="breadcrumb-item"><a href="/seller/products" class="text-decoration-none">Products</a></li>
                            <li class="breadcrumb-item active">@Model.ProductName</li>
                        </ol>
                    </nav> *@
                    <h1 class="h3 mb-0">@Model.ProductName</h1>
                    <p class="text-muted mb-0">Product ID: @Model.ProductId</p>
                </div>
                <div class="btn-group" role="group">
                    <a href="/seller/products/@Model.ProductId/edit" class="btn btn-primary">
                        <i class="fas fa-edit me-2"></i>Edit Product
                    </a>
                    <button type="button" class="btn btn-success" id="toggleStatusBtn"
                            data-product-id="@Model.ProductId">
                        <i class="fas fa-toggle-on me-2"></i>Active
                    </button>
                    <div class="btn-group" role="group">
                        <button type="button" class="btn btn-outline-secondary dropdown-toggle"
                                data-bs-toggle="dropdown">
                            <i class="fas fa-ellipsis-v"></i>
                        </button>
                        <ul class="dropdown-menu">
                            <li>
                                <a class="dropdown-item" href="/seller/products/@Model.ProductId/duplicate">
                                    <i class="fas fa-copy me-2"></i>Duplicate Product
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="/@Model.Url" target="_blank">
                                    <i class="fas fa-external-link-alt me-2"></i>View Live
                                </a>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <a class="dropdown-item text-danger" href="#" onclick="deleteProduct('@Model.ProductId')">
                                    <i class="fas fa-trash me-2"></i>Delete Product
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Stats Row -->
    <div class="row mb-4">
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card bg-primary text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="card-title">Total Variants</h6>
                            <h3 class="mb-0">@Model.ProductVariants.Count</h3>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-boxes fa-2x opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card bg-success text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="card-title">Total Stock</h6>
                            <h3 class="mb-0">@Model.ProductVariants.Sum(v => v.Quantity ?? 0)</h3>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-warehouse fa-2x opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card bg-info text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="card-title">Active Variants</h6>
                            <h3 class="mb-0">@Model.ProductVariants.Count(v => v.IsActive == true)</h3>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-check-circle fa-2x opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card bg-warning text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="card-title">Low Stock</h6>
                            <h3 class="mb-0">@Model.ProductVariants.Count(v => (v.Quantity ?? 0) <= 5)</h3>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-exclamation-triangle fa-2x opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="row">
        <!-- Product Overview -->
        <div class="col-lg-8">
            <!-- Product Information Card -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">Product Information</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            @if (Model.ProductVariants.Any() && Model.ProductVariants.First().ImageUrls.Any())
                            {

                                <img src="~/images/utitlity/sample-image.jpg"
                                     alt="@Model.ProductName" class="img-fluid rounded mb-3"
                                     style="max-height: 200px; object-fit: cover;">
                            }
                            else
                            {
                                <div class="bg-light rounded d-flex align-items-center justify-content-center mb-3"
                                     style="height: 200px;">
                                    <i class="fas fa-image fa-3x text-muted"></i>
                                </div>
                            }
                        </div>
                        <div class="col-md-8">
                            <table class="table table-borderless">
                                <tr>
                                    <td class="fw-semibold text-muted">Product Name:</td>
                                    <td>@Model.ProductName</td>
                                </tr>
                                <tr>
                                    <td class="fw-semibold text-muted">Category:</td>
                                    <td><span class="badge bg-secondary">@Model.CategoryName</span></td>
                                </tr>
                                <tr>
                                    <td class="fw-semibold text-muted">Brand:</td>
                                    <td><span class="badge bg-info">@Model.BrandName</span></td>
                                </tr>
                                <tr>
                                    <td class="fw-semibold text-muted">Base Price:</td>
                                    <td class="text-primary fw-bold">$@Model.Price.ToString("F2")</td>
                                </tr>
                                <tr>
                                    <td class="fw-semibold text-muted">URL Slug:</td>
                                    <td>
                                        <code>/@Model.Url</code>
                                        <a href="/@Model.Url" target="_blank" class="btn btn-sm btn-outline-primary ms-2">
                                            <i class="fas fa-external-link-alt"></i>
                                        </a>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <div class="mt-3">
                            <h6 class="fw-semibold">Description:</h6>
                            <p class="text-muted">@Model.Description</p>
                        </div>
                    }
                </div>
            </div>

            <!-- Variants Management Card -->
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">Product Variants</h5>
                    <a href="/seller/products/@Model.ProductId/variants/add" class="btn btn-primary btn-sm">
                        <i class="fas fa-plus me-1"></i>Add Variant
                    </a>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>Image</th>
                                    <th>Variant</th>
                                    <th>SKU</th>
                                    <th>Price</th>
                                    <th>Stock</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var variant in Model.ProductVariants)
                                {
                                    <tr class="@(variant.IsActive != true ? "table-secondary" : "")">
                                        <td>
                                            @if (variant.ImageUrls.Any())
                                            {
                                                <img src="@variant.ImageUrls.First()" alt="Variant image"
                                                     class="rounded" style="width: 50px; height: 50px; object-fit: cover;">
                                            }
                                            else
                                            {
                                                <div class="bg-light rounded d-flex align-items-center justify-content-center"
                                                     style="width: 50px; height: 50px;">
                                                    <i class="fas fa-image text-muted"></i>
                                                </div>
                                            }
                                        </td>
                                        <td>
                                            <div>
                                                <strong>@(!string.IsNullOrEmpty(variant.VarientName) ? variant.VarientName : "Default Variant")</strong>
                                                @if (variant.Features.Any())
                                                {
                                                    <br>
                                            
                                                    <small class="text-muted">
                                                        @string.Join(", ", variant.Features.Take(2).Select(f => $"{f.Name}: {f.Value}"))
                                                        @if (variant.Features.Count > 2)
                                                        {
                                                            <span>... +@(variant.Features.Count - 2) more</span>
                                                        }
                                                    </small>
                                                }
                                            </div>
                                        </td>
                                        <td><code>@variant.Sku</code></td>
                                        <td class="fw-bold text-primary">$@variant.Price.ToString("F2")</td>
                                        <td>
                                            <span class="@(variant.Quantity <= 5 ? "text-danger" : "text-success") fw-bold">
                                                @(variant.Quantity ?? 0)
                                            </span>
                                            @if (variant.Quantity <= 5 && variant.Quantity > 0)
                                            {
                                                <i class="fas fa-exclamation-triangle text-warning ms-1" title="Low stock"></i>
                                            }
                                            else if (variant.Quantity == 0)
                                            {
                                                <i class="fas fa-times-circle text-danger ms-1" title="Out of stock"></i>
                                            }
                                        </td>
                                        <td>
                                            @if (variant.IsActive == true)
                                            {
                                                <span class="badge bg-success">Active</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Inactive</span>
                                            }
                                        </td>
                                        <td>
                                            <div class="btn-group btn-group-sm">
                                                <a href="/seller/products/@Model.ProductId/variants/@variant.ProductIvarientId/edit"
                                                   class="btn btn-outline-primary" title="Edit">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <button type="button" class="btn btn-outline-info"
                                                        onclick="viewVariantDetails('@variant.ProductIvarientId')" title="Details">
                                                    <i class="fas fa-eye"></i>
                                                </button>
                                                <button type="button" class="btn btn-outline-success"
                                                        onclick="toggleVariantStatus('@variant.ProductIvarientId', @(variant.IsActive?.ToString().ToLower() ?? "false"))"
                                                        title="@(variant.IsActive == true ? "Deactivate" : "Activate")">
                                                    <i class="fas fa-@(variant.IsActive == true ? "toggle-on" : "toggle-off")"></i>
                                                </button>
                                                <button type="button" class="btn btn-outline-danger"
                                                        onclick="deleteVariant('@variant.ProductIvarientId')" title="Delete">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    @if (!Model.ProductVariants.Any())
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-box-open fa-3x text-muted mb-3"></i>
                            <h6 class="text-muted">No variants found</h6>
                            <p class="text-muted">Create your first product variant to get started.</p>
                            <a href="/seller/products/@Model.ProductId/variants/add" class="btn btn-primary">
                                <i class="fas fa-plus me-2"></i>Add First Variant
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <!-- Quick Actions Card -->
            <div class="card mb-4">
                <div class="card-header">
                    <h6 class="card-title mb-0">Quick Actions</h6>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <button type="button" class="btn btn-outline-primary" onclick="bulkUpdateStock()">
                            <i class="fas fa-boxes me-2"></i>Bulk Update Stock
                        </button>
                        <button type="button" class="btn btn-outline-success" onclick="bulkUpdatePrices()">
                            <i class="fas fa-tags me-2"></i>Bulk Update Prices
                        </button>
                        <button type="button" class="btn btn-outline-info" onclick="exportProductData()">
                            <i class="fas fa-download me-2"></i>Export Data
                        </button>
                        <button type="button" class="btn btn-outline-warning" onclick="viewAnalytics()">
                            <i class="fas fa-chart-bar me-2"></i>View Analytics
                        </button>
                    </div>
                </div>
            </div>

            <!-- Stock Alert Card -->
            @{
                var lowStockVariants = Model.ProductVariants.Where(v => (v.Quantity ?? 0) <= 5).ToList();
            }
            @if (lowStockVariants.Any())
            {
                <div class="card mb-4 border-warning">
                    <div class="card-header bg-warning text-white">
                        <h6 class="card-title mb-0">
                            <i class="fas fa-exclamation-triangle me-2"></i>Stock Alerts
                        </h6>
                    </div>
                    <div class="card-body">
                        @foreach (var variant in lowStockVariants.Take(5))
                        {
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <div>
                                    <small class="fw-semibold">@(!string.IsNullOrEmpty(variant.VarientName) ? variant.VarientName : variant.Sku)</small>
                                    <br><small class="text-muted">@variant.Sku</small>
                                </div>
                                <span class="badge bg-danger">@(variant.Quantity ?? 0) left</span>
                            </div>
                            @if (variant != lowStockVariants.Last())
                            {
                                <hr class="my-2">
                            }
                        }
                        @if (lowStockVariants.Count > 5)
                        {
                            <hr class="my-2">
                            <small class="text-muted">And @(lowStockVariants.Count - 5) more variants with low stock...</small>
                        }
                    </div>
                </div>
            }

            <!-- Recent Activity Card -->
            <div class="card">
                <div class="card-header">
                    <h6 class="card-title mb-0">Recent Activity</h6>
                </div>
                <div class="card-body">
                    <div class="timeline">
                        <div class="timeline-item">
                            <i class="fas fa-edit text-primary"></i>
                            <div class="timeline-content">
                                <h6 class="timeline-title">Product Updated</h6>
                                <p class="timeline-description text-muted">Description modified</p>
                                <small class="text-muted">2 hours ago</small>
                            </div>
                        </div>
                        <div class="timeline-item">
                            <i class="fas fa-plus text-success"></i>
                            <div class="timeline-content">
                                <h6 class="timeline-title">New Variant Added</h6>
                                <p class="timeline-description text-muted">Size M variant created</p>
                                <small class="text-muted">1 day ago</small>
                            </div>
                        </div>
                        <div class="timeline-item">
                            <i class="fas fa-warehouse text-info"></i>
                            <div class="timeline-content">
                                <h6 class="timeline-title">Stock Updated</h6>
                                <p class="timeline-description text-muted">Stock increased by 50 units</p>
                                <small class="text-muted">3 days ago</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Variant Details Modal -->
<div class="modal fade" id="variantDetailsModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Variant Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="variantDetailsContent">
                <!-- Content will be loaded here -->
            </div>
        </div>
    </div>
</div>

<style>
    .timeline {
        position: relative;
        padding-left: 30px;
    }

        .timeline::before {
            content: '';
            position: absolute;
            left: 15px;
            top: 0;
            bottom: 0;
            width: 2px;
            background: #dee2e6;
        }

    .timeline-item {
        position: relative;
        margin-bottom: 20px;
    }

        .timeline-item i {
            position: absolute;
            left: -22px;
            top: 5px;
            width: 14px;
            height: 14px;
            border-radius: 50%;
            background: white;
            border: 2px solid;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 8px;
        }

    .timeline-title {
        font-size: 14px;
        margin-bottom: 2px;
    }

    .timeline-description {
        font-size: 12px;
        margin-bottom: 5px;
    }

    .card-header h5, .card-header h6 {
        color: #495057;
    }

    .table-responsive {
        border-radius: 0.375rem;
    }

    .btn-group-sm .btn {
        padding: 0.25rem 0.4rem;
    }
</style>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js"></script>

<script>
    $(document).ready(function() {
        // Initialize tooltips
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[title]'));
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl);
        });
    });

    // Toggle product status
    $('#toggleStatusBtn').click(function() {
        var productId = $(this).data('product-id');
        var isActive = $(this).hasClass('btn-success');

        $.ajax({
            url: '/seller/api/products/' + productId + '/toggle-status',
            type: 'POST',
            success: function(response) {
                if (isActive) {
                    $('#toggleStatusBtn').removeClass('btn-success').addClass('btn-secondary')
                        .html('<i class="fas fa-toggle-off me-2"></i>Inactive');
                } else {
                    $('#toggleStatusBtn').removeClass('btn-secondary').addClass('btn-success')
                        .html('<i class="fas fa-toggle-on me-2"></i>Active');
                }
                showAlert('Product status updated successfully!', 'success');
            },
            error: function() {
                showAlert('Failed to update product status.', 'error');
            }
        });
    });

    // View variant details
    function viewVariantDetails(variantId) {
        $.ajax({
            url: '/seller/api/variants/' + variantId,
            type: 'GET',
            success: function(variant) {
                var content = '<div class="row">';

                // Images
                if (variant.imageUrls && variant.imageUrls.length > 0) {
                    content += '<div class="col-md-4">';
                    content += '<h6>Images</h6>';
                    variant.imageUrls.forEach(function(url) {
                        content += '<img src="' + url + '" class="img-thumbnail mb-2" style="width: 100%; max-height: 150px; object-fit: cover;">';
                    });
                    content += '</div>';
                }

                // Details
                content += '<div class="col-md-8">';
                content += '<h6>Variant Information</h6>';
                content += '<table class="table table-sm table-borderless">';
                content += '<tr><td class="fw-semibold">Name:</td><td>' + (variant.varientName || 'N/A') + '</td></tr>';
                content += '<tr><td class="fw-semibold">SKU:</td><td><code>' + variant.sku + '</code></td></tr>';
                content += '<tr><td class="fw-semibold">Price:</td><td class="text-primary fw-bold">$' + variant.price.toFixed(2) + '</td></tr>';
                content += '<tr><td class="fw-semibold">Stock:</td><td>' + (variant.quantity || 0) + '</td></tr>';
                content += '<tr><td class="fw-semibold">Status:</td><td>' +
                    (variant.isActive ? '<span class="badge bg-success">Active</span>' : '<span class="badge bg-secondary">Inactive</span>') +
                    '</td></tr>';
                content += '</table>';

                // Features
                if (variant.features && variant.features.length > 0) {
                    content += '<h6 class="mt-3">Features</h6>';
                    content += '<table class="table table-sm table-striped">';
                    variant.features.forEach(function(feature) {
                        content += '<tr><td class="fw-semibold">' + feature.name + '</td><td>' + feature.value + '</td></tr>';
                    });
                    content += '</table>';
                }

                content += '</div></div>';

                $('#variantDetailsContent').html(content);
                $('#variantDetailsModal').modal('show');
            },
            error: function() {
                showAlert('Failed to load variant details.', 'error');
            }
        });
    }

    // Toggle variant status
    function toggleVariantStatus(variantId, currentStatus) {
        $.ajax({
            url: '/seller/api/variants/' + variantId + '/toggle-status',
            type: 'POST',
            success: function(response) {
                location.reload(); // Reload to show updated status
            },
            error: function() {
                showAlert('Failed to update variant status.', 'error');
            }
        });
    }

    // Delete variant
    function deleteVariant(variantId) {
        if (confirm('Are you sure you want to delete this variant? This action cannot be undone.')) {
            $.ajax({
                url: '/seller/api/variants/' + variantId,
                type: 'DELETE',
                success: function(response) {
                    location.reload();
                },
                error: function() {
                    showAlert('Failed to delete variant.', 'error');
                }
            });
        }
    }

    // Delete product
    function deleteProduct(productId) {
        if (confirm('Are you sure you want to delete this entire product? This action cannot be undone and will delete all variants.')) {
            $.ajax({
                url: '/seller/api/products/' + productId,
                type: 'DELETE',
                success: function(response) {
                    window.location.href = '/seller/products';
                },
                error: function() {
                    showAlert('Failed to delete product.', 'error');
                }
            });
        }
    }

    // Bulk operations
    function bulkUpdateStock() {
        // Redirect to bulk stock update page
        window.location.href = '/seller/products/@Model.ProductId/bulk-stock';
    }

    function bulkUpdatePrices() {
        // Redirect to bulk price update page
        window.location.href = '/seller/products/@Model.ProductId/bulk-prices';
    }

    function exportProductData() {
        // Download product data export
        window.location.href = '/seller/api/products/@Model.ProductId/export';
    }

    function viewAnalytics() {
        // Redirect to analytics page
        window.location.href = '/seller/products/@Model.ProductId/analytics';
    }

    // Show alert function
    function showAlert(message, type) {
        var alertClass = type === 'success' ? 'alert-success' : 'alert-danger';
        var alert = $('<div class="alert ' + alertClass + ' alert-dismissible fade show position-fixed" ' +
            'style="top: 20px; right: 20px; z-index: 9999; min-width: 300px;" role="alert">' +
            message +
            '<button type="button" class="btn-close" data-bs-dismiss="alert"></button>' +
            '</div>');

        $('body').append(alert);

        setTimeout(function() {
            alert.fadeOut(function() {
                $(this).remove();
            });
        }, 5000);
    }
</script>